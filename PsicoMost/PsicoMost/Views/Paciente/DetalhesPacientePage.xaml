                           Grid.Column="1"
                           FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label Text="" 
                            x:Name="lblCel"
                           Grid.Row="3" 
                           Margin="5,0,0,0"
                           Grid.Column="1"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />
