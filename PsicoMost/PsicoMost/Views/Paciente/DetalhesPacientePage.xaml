                           Margin="5,0,0,0"
                           Grid.Column="0"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />


                    <Label Text="Cidade" 
                            Margin="5,5,0,0"
                           Grid.Row="2" 
                           Grid.Column="1"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label x:Name="lblCidade" 
                           Margin="5,0,0,0"
                           Grid.Row="3" 
                           Grid.Column="1"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />
