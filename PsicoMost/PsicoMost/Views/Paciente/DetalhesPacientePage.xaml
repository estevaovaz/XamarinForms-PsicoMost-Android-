                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>

                    <Label Text="TELEFONES" Margin="5,5,0,0" TextColor="White" FontFamily="Arial" FontSize="Medium" Grid.Row="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>

                </Grid>

                <Grid BackgroundColor="#FFFFFF" Margin="0,0,0,15">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        
                    </Grid.ColumnDefinitions>

                    <Label 
                            Margin="5,5,0,0"
                           Text="DDD Res." 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small" 
                           TextColor="#000000"
                           />

                    <Label Text=""
                           Margin="5,0,0,0"
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           Grid.Row="1" 
