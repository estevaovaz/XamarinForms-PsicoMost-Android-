                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*" />
                        <ColumnDefinition Width="33*" />
                        <ColumnDefinition Width="33*" />
                       
                    </Grid.ColumnDefinitions>

                    <Label 
                            Margin="5,2,0,0"
                           Text="Registro" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small" 
                           TextColor="#000000"
                           />

                    <Label x:Name="lblRegistro"
                           Margin="5,0,0,0"
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           Grid.Row="1" 
                           Grid.Column="0" 
                           />

                    <Label Text="Nome" 
                            Margin="5,5,0,0"
                           Grid.Row="0" 
                           Grid.Column="1"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small" 
                           TextColor="#000000"
                           />

                    <Label 
                            x:Name="lblNome"
                            Grid.Row="1" 
                            Grid.Column="1"                           
                            FontFamily="Arial"
                            FontSize="Small"
                            TextColor="#666666"
                            Margin="5,0,0,0"
                        />

                    <Label Text="Sobrenome" 
                            Margin="0,5,0,0"
