                    <Label x:Name="lblSituacao" 
                           Grid.Row="5" 
                           Grid.Column="2"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />

                    <Label Text="Email" 
                            Margin="5,5,0,0"
                           Grid.Row="6" 
                           Grid.Column="0"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label x:Name="lblEmail"
                           Grid.Row="7" 
                           Margin="5,0,0,0"
                           Grid.Column="0"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />

                </Grid>

                <!--GRID ENDEREÇOS TITULO-->
