                           Grid.Column="0"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label x:Name="lblNacionalidade" 
                           Grid.Row="5" 
                           Grid.Column="0"     
                           Margin="5,0,0,0"
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />


                    <Label Text="Natuaralidade" 
                            Margin="10,5,0,0"
                           Grid.Row="4" 
                           Grid.Column="1"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label x:Name="lblNaturalidade"
                           Grid.Row="5" 
                           Grid.Column="1"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           Margin="5,0,0,0"
                           TextColor="#666666"
                           />


                    <Label Text="Situação" 
                            Margin="15,5,0,0"
                           Grid.Row="4" 
                           Grid.Column="2"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"                           
