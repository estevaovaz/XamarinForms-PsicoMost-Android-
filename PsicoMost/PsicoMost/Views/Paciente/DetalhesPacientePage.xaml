                           Grid.Column="2"
                            FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label 
                           x:Name="lblSobrenome"
                           Grid.Row="1" 
                           Grid.Column="2"                             
                           FontFamily="Arial"
                           FontSize="Small"
                           TextColor="#666666"
                           />

                    <Label Text="Dt. Nascimento"  
                            Margin="5,5,0,0"
                           Grid.Row="2" 
                           Grid.Column="0"
                           FontFamily="Arial" 
                           FontAttributes="Bold" 
                           FontSize="Small"                          
                           TextColor="#000000"
                           />

                    <Label 
                            x:Name="lblDtNascimento"
